{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
       "@/*": ["src/*"],
      "@storybook/*": ["../storybook*"]
    }
  },
  "include": [
    "src", "./index.ts",
    "./src/components/withStyles/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
