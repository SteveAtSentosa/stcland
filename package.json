{
  "name": "stcland",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "lint:all": "pnpm run -r --filter=./packages/* lint",
    "build:all": "pnpm run -r --filter=./packages/* build",
    "test:all": "pnpm run -r test",
    "pre-commit": "pnpm run -r --filter=./packages/* pre-commit",
    "fix-trailling-spaces": "find . -type f \\( -name '*.js' -o -name '*.ts' -o -name '*.jsx' -o -name '*.tsx' \\) -exec sed -i 's/[ \\t]*$//' {} \\; && git add .",
    "prepare": "husky",
    "create-changeset": "changeset",
    "set-version": "changeset version",
    "publish:changeset": "changeset publish",
    "publish:all": "dotenv pnpm publish --filter '@stcland/*' --access public"
  }
}
